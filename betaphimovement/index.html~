<body>
<input id="n" value="1" type="number"/><input type="button" value="start" onClick="update()"/><br/>
<canvas id="c">HTML5 Feature "canvas" missing.</canvas>
<script>
var n = document.getElementById("n");
var c = document.getElementById("c");
var g;
var x = c.getContext("2d");
c.width = innerWidth - 100;
c.height = innerHeight - 200;
var min = c.width<c.height?c.width:c.height;
var wos = (min==c.width?0:min/c.width)*c.width/2;
var hos = (min==c.height?0:min/c.height)*c.height/2;
x.fillStyle = "#ffffff"; 
var r = 0;
function update()
{
	clearTimeout(g);
	draw();
}
function draw()
{
	var t = parseInt(n.value);
	if(t)
	{
		g = setTimeout(function(){draw();},1000/t);
	}
	x.clearRect(0,0,c.width,c.height);
	if(r!=0){
	x.beginPath();
	x.arc(wos+min*1/8,hos+min*1/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	
	}if(r!=1){
	x.beginPath();
	x.arc(wos+min*3/8,hos+min*1/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	
	}if(r!=2){
	x.beginPath();
	x.arc(wos+min*5/8,hos+min*1/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	
	}if(r!=3){
	x.beginPath();
	x.arc(wos+min*7/8,hos+min*1/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	}


	if(r!=4){
	x.beginPath();
	x.arc(wos+min*7/8,hos+min*3/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	
	}if(r!=5){
	x.beginPath();
	x.arc(wos+min*7/8,hos+min*5/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	
	}if(r!=6){
	x.beginPath();
	x.arc(wos+min*7/8,hos+min*7/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	


	}if(r!=7){
	x.beginPath();
	x.arc(wos+min*5/8,hos+min*7/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	
	}if(r!=8){
	x.beginPath();
	x.arc(wos+min*3/8,hos+min*7/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	
	}if(r!=9){
	x.beginPath();
	x.arc(wos+min*1/8,hos+min*7/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	
	
	
	}if(r!=10){
	x.beginPath();
	x.arc(wos+min*1/8,hos+min*5/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	
	}if(r!=11){
	x.beginPath();
	x.arc(wos+min*1/8,hos+min*3/8, min/8, 0, 2 * Math.PI);
	x.fill(); 
	}
	r=(r+1)%12;
}
</script>
</body>
</html>
